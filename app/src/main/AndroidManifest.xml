<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.narumichi.githubsearchapisample">

    <!-- インターネットのパーミッション許可　-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- name: Applicationクラスを指定 -->
    <!-- allowBackUp: バックアップを許可するかどうか -->
    <!-- icon: アプリのアイコン -->
    <!-- label: アプリの名前 -->
    <!-- roundIcon: アプリのアイコン（ラウンド）-->
    <!-- supportsRtl:RTLレイアウトを表示するかどうか -->
    <!-- theme: res/values/themeで指定したテーマを適用 -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubSearchApiSample">

        <!-- name: Activityを指定-->
        <!-- exported: Activityを他のアプリのコンポーネントから起動できるかどうか-->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <!-- 起動したいActivityに指定する-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>